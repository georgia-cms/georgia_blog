<tr class="post <%= post.status.try(:label) %>">
  <td>
    <%= post.title %>
  </td>
  <td>
    <%= post.excerpt %>
  </td>
  <td>
    <%= post.url %>
  </td>
  <td class="labels">
    <%= post.status_tag %>
  </td>
  <td class="actions">
    <%= link_to_group_edit post, publish: true, review: true, delete: true %>
  </td>
</tr>
